{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "framework": "vite",
    "builds" :[
        {
            "src" : "server.js",
            "use" : "@vercel/node"
        },
        {
            "src" : "public/**",
            "use" : "@vercel/static"
        }
        
    ],
    "routes": [
        {
            "src": "/",
            "dest": "build/index.js"
        },
        {
            "src": "/register",
            "dest": "index.js"
        },
        {
            "src": "/signin",
            "dest": "index.js"
        },
        {
            "src": "/profile",
            "dest": "index.js"
        },
        {
            "src": "/messages/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/(.+)",
            "dest": "build/$1"
        }
    ]
}