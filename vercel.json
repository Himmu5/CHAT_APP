{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "framework": "vite",
    "builds" :[
        {
            "src" : "server.js",
            "use" : "@vercel/node"
        },
        {
            "src" : "dist/**",
            "use" : "@vercel/static"
        }
        
    ],
    "rewrites": [
        {
            "source": "/",
            "destination": "dist/index.html"
        },
        {
            "source": "/register",
            "destination": "index.js"
        },
        {
            "source": "/signin",
            "destination": "index.js"
        },
        {
            "source": "/profile",
            "destination": "index.js"
        },
        {
            "source": "/messages/(.*)",
            "destination": "index.js"
        },
        {
            "source": "/(.+)",
            "destination": "dist/$1"
        }
    ]
}