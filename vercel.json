{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/register",
            "destination": "index.js"
        },
        {
            "source": "/signin",
            "destination": "index.js"
        },
        {
            "source": "/profile",
            "destination": "index.js"
        },
        {
            "source": "/messages/(.*)",
            "destination": "index.js"
        },
        {
            "source": "/(.*)",
            "destination": "build/"
        }
    ]
}